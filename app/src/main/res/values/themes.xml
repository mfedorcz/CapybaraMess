<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapybaraMess" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Ensure no padding or margins affect layout globally -->
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>

        <item name="android:statusBarColor">@color/colorOnPrimary</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <!-- ActionBar title text style -->
    <style name="MyActionBar.TitleTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Custom Text Appearance for semi-bold and size 24sp -->
    <style name="TextAppearance.LogoFont" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">normal</item>
    </style>

    <style name="CodeBox">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_box_background</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
